    function no (sensor)
      { if (!sensor.no && !('no' in sensor)) return sensor

        var  acts = sensor.no
          ; !Array.isArray (acts) && (acts = [acts])
          ;
        var act
          , term
          , next  = -1
          , last  = acts.length
          , known = no.our.known
          , sense = no.our.sense
          ;
